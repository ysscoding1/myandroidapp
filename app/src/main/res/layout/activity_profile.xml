<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".dealMainActivityFragment"
    android:background="#FFFFFF">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="600px"
        android:id="@+id/profileHeader"
        android:background="@drawable/blurredcitysmall">
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10px">
            <ImageView
                android:layout_width="300px"
                android:layout_height="300px"
                android:layout_gravity="center_horizontal"
                android:id="@+id/editprofile"
                android:layout_centerInParent="true"
                android:src="@drawable/sampleprofilecirclesmall">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:id="@+id/profileName"
                android:text="John Herzog"
                android:textColor="#FFFFFF"
                android:layout_below="@+id/editprofile"
                android:layout_centerHorizontal="true"/>
            <ImageButton
                android:id="@+id/profileCloseButton"
                android:layout_width="80px"
                android:layout_height="80px"
                android:src="@drawable/deletesign"
                android:layout_alignParentEnd="true">
            </ImageButton>
        </RelativeLayout>
    </LinearLayout>
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/profileHeader">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#424242">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="150px"
                android:text="Manage Your Account"
                android:textColor="#FFFFFF"
                android:textSize="8pt"
                android:gravity="center"
                android:drawableLeft="@drawable/usersettings"
                android:drawablePadding="10dp"
                android:paddingLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="150px"
                android:text="View Your Connections"
                android:textColor="#FFFFFF"
                android:textSize="8pt"
                android:gravity="center"
                android:drawableLeft="@drawable/userconnections"
                android:drawablePadding="10dp"
                android:paddingLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="150px"
                android:text="Settings"
                android:textColor="#FFFFFF"
                android:textSize="8pt"
                android:gravity="center"
                android:drawableLeft="@drawable/settings"
                android:drawablePadding="10dp"
                android:paddingLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="150px"
                android:text="Give Us Feedback"
                android:textColor="#FFFFFF"
                android:textSize="8pt"
                android:gravity="center"
                android:drawableLeft="@drawable/feedback"
                android:drawablePadding="10dp"
                android:paddingLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="150px"
                android:text="Have Any Questions?"
                android:textColor="#FFFFFF"
                android:textSize="8pt"
                android:gravity="center"
                android:drawableLeft="@drawable/questionmark"
                android:drawablePadding="10dp"
                android:paddingLeft="10dp"/>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>